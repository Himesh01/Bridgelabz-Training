-- mysql>
CREATE TABLE book (
book_id INT PRIMARY KEY AUTO_INCREMENT,
title VARCHAR(80) NOT NULL,
author VARCHAR(60),
genre VARCHAR(40),
copies_available INT NOT NULL
);

