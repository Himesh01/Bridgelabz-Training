-- mysql>
SELECT d.doctor_id,
       d.doctor_name,
       s.specialty_name,
       sch.available_day,
       sch.time_slot
FROM doctors d
JOIN specialties s ON d.specialty_id = s.specialty_id
JOIN doctor_schedule sch ON d.doctor_id = sch.doctor_id
WHERE s.specialty_name = 'Cardiology'
AND d.is_active = TRUE;

